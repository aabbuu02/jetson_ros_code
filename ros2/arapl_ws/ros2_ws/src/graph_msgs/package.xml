<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>graph_msgs</name>
  <version>1.0.0</version>
  <description>
    Custom message and service definitions for graph-based navigation and planning.
    Includes vertex, edge, and graph data structures with metadata for topological navigation.
  </description>
  
  <maintainer email="your_email@example.com">Your Name</maintainer>
  <license>BSD</license>
  
  <author>Original Author</author>

  <!-- Build tool dependency -->
  <buildtool_depend>ament_cmake</buildtool_depend>
  
  <!-- Message generation dependencies -->
  <buildtool_depend>rosidl_default_generators</buildtool_depend>
  
  <!-- Runtime dependencies -->
  <exec_depend>rosidl_default_runtime</exec_depend>
  
  <!-- Message dependencies -->
  <depend>geometry_msgs</depend>
  <depend>nav_msgs</depend>
  <depend>std_msgs</depend>
  <depend>builtin_interfaces</depend>
  
  <!-- Testing dependencies -->
  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>
  
  <!-- Member of group -->
  <member_of_group>rosidl_interface_packages</member_of_group>
  
  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>

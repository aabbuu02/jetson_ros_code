<?xml version ="1.0"?>
<robot name ="pillar">
  <link name="PILLAR"/>
  <joint name="fwf" type="fixed">
    <parent link="PILLAR"/>
    <child link="pillar1"/>

  </joint >
  <link name="pillar1">


    	<collision>
    		<geometry>
    				<box size="0.1 .1 .60"/>
    		</geometry>
    		<origin rpy="0 0 0" xyz="0 0 0"/>
    	</collision>
    <visual>
    	<geometry>
    	<box size="0.1 0.1 .60"/>
    	</geometry>
    	<origin rpy="0 0 0" xyz="0 0 0"/>
    <material name="red">
    	<color rgba="1 0 0 1"/>
    </material>
  </visual>


  <inertial>
  	<origin rpy="0 0 0" xyz="0 0 0"/>
  	<mass value="10"/>
  	<inertia ixx="1" ixy="0" ixz="0"
  		 iyy="1" iyz="0.0"
  		 izz="1"/>
  	 </inertial>
</link>
<joint name="l1tol2" type="fixed">
  <parent link="pillar1"/>
  <child link="pillar2"/>
  <origin xyz="0 0.6 0"/>
</joint>


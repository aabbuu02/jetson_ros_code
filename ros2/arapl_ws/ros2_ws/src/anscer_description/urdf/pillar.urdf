</link>

<link name="base_link_pillar"> </link>
<joint name="pillar_to_base" type="fixed">
<parent link="pillar2"/>
<child link="base_link_pillar"/>
 <origin rpy="-1 0 0" xyz="0 0 0"/>
</joint>


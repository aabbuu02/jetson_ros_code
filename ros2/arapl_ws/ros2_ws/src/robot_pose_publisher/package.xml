<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>robot_pose_publisher</name>
  <version>1.0.0</version>
  <description>
    Publishes the robot's position in a geometry_msgs/PoseStamped message.
    The pose is computed based on the TF2 transform between the map frame and base_link frame.
  </description>
  
  <maintainer email="your_email@example.com">Your Name</maintainer>
  <license>BSD</license>
  <author email="rctoris@wpi.edu">Russell Toris</author>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <depend>rclcpp</depend>
  <depend>geometry_msgs</depend>
  <depend>tf2</depend>
  <depend>tf2_ros</depend>
  <depend>tf2_geometry_msgs</depend>

  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>

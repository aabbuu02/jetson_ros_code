<launch>
  <!-- Lower Level Controller -->

  <include file="$(find acr_robot_controller)/launch/acr_robot_controller.launch"/>

<node pkg="tf" type="static_transform_publisher" name="odom_to_map"  args="0 0 0 0 0 0 map odom_frame 100" />

  <node pkg="lower_level_controller" type="lower_level_controller" respawn="false" name="lower_level_controller" output="screen">
    <rosparam command="load" file="$(find lower_level_controller)/config/lower_level_controller.yaml"/>
    <rosparam command="load" file="$(find lower_level_controller)/config/modbus_configuration.yaml"/>
    <rosparam command="load" file="$(find lower_level_controller)/config/roboteq_configuration.yaml"/>
    <rosparam command="load" file="$(find lower_level_controller)/config/odrive_configuration.yaml"/>
    <rosparam command="load" file="$(find lower_level_controller)/config/rainbow_configuration.yaml"/>
  </node>
</launch>


